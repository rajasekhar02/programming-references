{
    "compilerOptions": {
        "outDir": "dist", // where to put the TS files
        "target": "ES2021", // which level of JS support to target
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "src"
    ] // which files to compile
}